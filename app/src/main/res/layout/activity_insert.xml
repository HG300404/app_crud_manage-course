<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsertActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THÊM HỌC PHẦN"
        android:textAllCaps="true"
        android:textColor="#5968BC"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÊN HỌC PHẦN"
                android:layout_marginLeft="20dp"
                android:textColor="#5968BC"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#5968BC"
                android:layout_marginLeft="20dp"
                android:hint="Nhập tên học phần"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SỐ TÍN CHỈ"
                android:textColor="#5968BC"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textColor="#5968BC"
                android:layout_marginLeft="20dp"
                android:hint="Nhập số tín chỉ"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HỌC KỲ"
                android:textColor="#5968BC"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtSemester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#5968BC"
                android:inputType="text"
                android:layout_marginLeft="20dp"
                android:hint="Nhập học kỳ"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LƯU"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="150dp"/>
</LinearLayout>